{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictFunctionTypes": true,
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES2015.Promise",
      "ES2015.Iterable"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}